<script>
    console.log("Foreign Citizen Create view");
    var allMainFile = [];
    var allFileCount = [];
    var id;
    var PictureName;
     $(document).ready(function () {
        if ('@Model.PersonImage' != null || '@Model.PersonImage' != '') {
        $("#imgPreview-0").show();
