@model SafetyAndSecurityForNSI.Models.CriminalRecordEntry

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="text-center"> Crime Report Details</h4>
<hr />
<div class="row form-horizontal"style="font-size:28px;">
    <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="col-md-6">
            <div class="form-group">
                @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Name)
                </div>
            </div>
          
            <div class="form-group">
                @Html.Label("Crime Status", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Status, "", new { @class = "control-control" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.Label("Gender", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                   @Html.DisplayFor(model => model.Gender, "", new { @class = "control-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Crime Type", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                   @Html.DisplayFor(model => model.CrimeType, "", new { @class = "control-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Age", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Age, "", new { @class = "control-control" })
                </div>
            </div>

        </div>
    </div>
    @if (Model.BirthId != null)
    {
        <div class="col-xs-12 col-sm-12 col-md-12 pull-left">
            <div class="form-group">
                @Html.Label("NID", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.Nid, "", new { @class = "control-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Birth Id", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.DisplayFor(model=>model.BirthId,"", new { @class = "control-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Parents NID", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.ParentsNid,"",new { @class = "control-control" })
                </div>
            </div>
        </div>

    }
    else if (Model.BirthId == null)
    {
        <div class="col-xs-12 col-sm-12 col-md-12 pull-left">
            <div class="form-group">
                @Html.Label("Passport No", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.DisplayFor(model => model.PassportNo, "", new { @class = "control-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("SSN", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                   @Html.DisplayFor(model => model.SSN, "", new { @class = "control-control" })
                </div>
            </div>
        </div>
    }  
    <div class="col-xs-12 col-sm-12 col-md-12">
        <h4 class="text-center" style="border:solid #0094ff;">Report Details</h4>
        <div class="text-center" style="background-color:#ebf9fa;text-align:justify;">
           @Html.Raw(Server.HtmlDecode(Model.CrimeDetails))
        </div>
    </div>
</div>
<p style="margin-bottom:50px;">
    @Html.ActionLink("Back to List", "Index")
</p>
<style>
    h4:hover{
        color:white;
        background-color:#213e23;
    }
</style>