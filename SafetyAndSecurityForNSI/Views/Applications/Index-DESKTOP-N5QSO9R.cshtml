@model IEnumerable<SafetyAndSecurityForNSI.Models.Application>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<h4>Application List</h4>


@if (Model.Count() > 0)
{
    <table class="table" id="allApplicationList">
        <tr>
            <th>#SL</th>
            <th>
                National Id
            </th>
            <th>
                Birth Id
            </th>
            <th>
                Email
            </th>
            <th>
                Contact
            </th>
            <th>
                Application Type
            </th>
            <th>
                Name
            </th>
            <th>
                Details
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>
                    @Html.DisplayFor(modelItem => item.NID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ApplicationId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ApplicationId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ApplicationId })
                </td>
            </tr>
        }

    </table>
}
else
{
    <p4>No data to Display</p4>
}

<div class="row col-sm-12">
    @Html.ActionLink("Back", "UserView", "DashBoard")
</div>
