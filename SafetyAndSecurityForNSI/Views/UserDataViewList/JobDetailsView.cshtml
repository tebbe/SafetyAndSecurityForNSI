@model SafetyAndSecurityForNSI.Models.GovernmentJob

@{
    ViewBag.Title = "JobDetailsView";
    Layout = "~/Views/Shared/_UserDashBoard.cshtml";
}



<div>
    <h4 class="text-center"><u> Job Details</u> </h4>
</div>
@if (Model != null)
{
    <div class="row">

        <div class="col-xs-12 text-center">
            @Html.DisplayFor(model => model.DepartmentName)
        </div>

        <div class="col-xs-12 text-center">
            @Html.DisplayFor(model => model.JobTitle)
        </div>

        <div class="col-xs-12 text-center">
            @Html.Raw(Model.Body)
        </div>
    </div>

}
else
{
    <h4>No record to display</h4>
}

<div class="row col-xs-12">
    @Html.ActionLink("Back", "JobList")
</div>
