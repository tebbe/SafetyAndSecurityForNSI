    }).data("kendoValidator");


    $("#HomeLoanEntryUpdate").click(function () {
        if (HomeValidation.validate()) {
            var sendData = new FormData();
        sendData.append("HomeLoanId", $("#HomeLoanId").val());
            sendData.append("CitizenName", $("#CitizenName").val());
