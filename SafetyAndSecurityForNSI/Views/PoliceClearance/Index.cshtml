@model IEnumerable<SafetyAndSecurityForNSI.Models.PoliceClearanceModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Police Clearance List/s</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ThanaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TokenNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThanaDetails)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OfficerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PassportNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PoliceClearImg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ThanaName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TokenNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThanaDetails)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OfficerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PassportNo)
        </td>
        <td>
            <img class="fa-user-plus img-view-css" src="~/Image/PoliceClearance/@item.PoliceClearImg" width="50" height="50" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
     
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ThanaId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ThanaId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ThanaId })
        </td>
    </tr>
}

</table>
<div>
    @Html.ActionLink("Back", "UserView", "DashBoard")
</div>